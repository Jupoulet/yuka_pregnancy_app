{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": [
        "error",
        {
            "tabWidth": 2,
            "useTabs": false,
            "semi": true,
            "singleQuote": true,
            "trailingComma": "all",
            "arrowParens": "avoid",
            "bracketSameLine": true,
            "printWidth": 120,
            "endOfLine": "lf"
        }
    ]
  }
}
